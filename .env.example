# PaperStore — environment variables
# Copy to .env and fill in your values.

# PostgreSQL connection string
DATABASE_URL=postgresql://paperstore:paperstore@localhost:5432/paperstore

# Path to Google OAuth 2.0 Desktop credentials file [ABSOLUTE NOT ~]
GOOGLE_CREDENTIALS_PATH=~/.config/paperstore/credentials.json

# Path to cached Google OAuth token (created on first authorisation) [ABSOLUTE NOT ~]
GOOGLE_TOKEN_PATH=~/.config/paperstore/token.json

# Google OAuth redirect URI — must match exactly what is registered in Google Cloud Console
# For local Docker development use: http://localhost:8000/auth/callback
GOOGLE_REDIRECT_URI=http://localhost:8000/auth/callback

# Google OAuth authorised JavaScript origin — must match exactly what is registered in Google Cloud Console
# For local Docker development use: http://localhost:8000
GOOGLE_JS_ORIGIN=http://localhost:8000

# Optional: Google Drive folder ID to store papers in (leave blank for root)
DRIVE_FOLDER_ID=

# Secret key for signing session cookies (generate with: python -c "import secrets; print(secrets.token_hex(32))")
SESSION_SECRET=
